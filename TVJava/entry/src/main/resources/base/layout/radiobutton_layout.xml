<DirectionalLayout
        xmlns:harmonyos="http://schemas.huawei.com/res/harmonyos"
        harmonyos:width="match_parent"
        harmonyos:height="match_parent"
        harmonyos:orientation="vertical"
        harmonyos:padding="32">
    <RadioContainer  harmonyos:id="$+id:rc"
                     harmonyos:width="match_parent"
                     harmonyos:height="match_parent"
                     harmonyos:orientation="vertical"
    >
        <RadioButton
                harmonyos:id="$+id:rb1"
                harmonyos:width="wrap_content"
                harmonyos:height="wrap_content"
                harmonyos:layout_alignment="center_horizontal"
                harmonyos:text="选项1"
                harmonyos:checked="true"

                harmonyos:text_size="80"/>
        <RadioButton
                harmonyos:id="$+id:rb2"
                harmonyos:width="wrap_content"
                harmonyos:height="wrap_content"
                harmonyos:layout_alignment="center_horizontal"
                harmonyos:text="选项2"
                harmonyos:text_size="80"/>
        <RadioButton
                harmonyos:id="$+id:rb3"
                harmonyos:width="wrap_content"
                harmonyos:height="wrap_content"
                harmonyos:layout_alignment="center_horizontal"
                harmonyos:text="选项3"
                harmonyos:text_size="80"/>
    </RadioContainer>
    <Text
            harmonyos:id="$+id:rbText"
            harmonyos:width="match_parent"
            harmonyos:height="wrap_content"
            harmonyos:layout_alignment="center_horizontal"

            harmonyos:text_color="#0000FF"

            harmonyos:text_size="60"/>
</DirectionalLayout>