<StackLayout
        xmlns:harmonyos="http://schemas.huawei.com/res/harmonyos"
        harmonyos:width="match_parent"
        harmonyos:height="match_parent"

        harmonyos:padding="32">
    <Button
            harmonyos:id="$+id:button1"
            harmonyos:width="300dp"
            harmonyos:height="300dp"

            harmonyos:text="按钮1"
            harmonyos:background_element="#00FFFF"
            harmonyos:text_size="150"/>

    <Button
            harmonyos:id="$+id:button2"
            harmonyos:width="200dp"
            harmonyos:height="200dp"

            harmonyos:text="按钮2"
            harmonyos:background_element="#0000FF"
            harmonyos:text_size="150"/>
    <Button
            harmonyos:id="$+id:button3"
            harmonyos:width="100dp"
            harmonyos:height="100dp"

            harmonyos:text="按钮3"
            harmonyos:background_element="#FF00FF"
            harmonyos:text_size="150"/>
</StackLayout>