<DirectionalLayout
        xmlns:harmonyos="http://schemas.huawei.com/res/harmonyos"
        harmonyos:width="match_parent"
        harmonyos:height="match_parent"
        harmonyos:orientation="vertical"
        harmonyos:padding="32">
    <Slider
            harmonyos:id="$+id:slider"
            harmonyos:width="match_parent"
            harmonyos:height="wrap_content"
            harmonyos:layout_alignment="center_horizontal"
            harmonyos:orientation="horizontal"
            harmonyos:min="0"
            harmonyos:max="100"
            harmonyos:progress="40"
            harmonyos:background_element="#FF0000"
            harmonyos:progress_background_element="#0000FF"
           />
    <Text
            harmonyos:id="$+id:txtSlider"
            harmonyos:width="match_parent"
            harmonyos:height="wrap_content"
            harmonyos:layout_alignment="center_horizontal"
            harmonyos:text_color="#0000FF"

            harmonyos:text_size="60"/>
    <Button
            harmonyos:id="$+id:btnSlider"
            harmonyos:width="match_parent"
            harmonyos:height="wrap_content"
            harmonyos:layout_alignment="center_horizontal"
            harmonyos:text="progress"
            harmonyos:text_color="#FF0000"
            harmonyos:background_element="#00FFFF"
            harmonyos:text_size="150"/>
</DirectionalLayout>