<DirectionalLayout
        xmlns:harmonyos="http://schemas.huawei.com/res/harmonyos"
        harmonyos:width="match_parent"
        harmonyos:height="match_parent"
        harmonyos:orientation="vertical"
        harmonyos:padding="32">

    <Button

            harmonyos:id="$+id:clipboardButton"
            harmonyos:width="match_parent"
            harmonyos:height="wrap_content"
            harmonyos:layout_alignment="center_horizontal"
            harmonyos:text="测试剪贴板"
            harmonyos:text_color="#FF0000"
            harmonyos:background_element="#00FFFF"
            harmonyos:text_size="150"/>
    <Text
            harmonyos:id="$+id:clipboardText"
            harmonyos:width="match_parent"
            harmonyos:height="wrap_content"
            harmonyos:layout_alignment="center_horizontal"
            harmonyos:background_element="#9fd6aa"

            harmonyos:text_size="200"/>


</DirectionalLayout>